{
  "branches": ["master"],
  "tagFormat": "${version}",
  "preset": "conventionalcommits",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogTitle": "Release Notes\n---",
        "changelogFile": "docs/release_notes.md"
      }
    ],
    [
      "@google/semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": ["ibis/__init__.py"],
            "from": "__version__ = \".*\"",
            "to": "__version__ = \"${nextRelease.version}\"",
            "results": [
              {
                "file": "ibis/__init__.py",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "verifyConditionsCmd": "ci/release/verify.sh",
        "prepareCmd": "ci/release/prepare.sh ${nextRelease.version}",
        "publishCmd": "ci/release/publish.sh"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": false,
        "assets": ["dist/*.whl"]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "pyproject.toml",
          "docs/release_notes.md",
          "setup.py",
          "ibis/__init__.py"
        ],
        "message": "chore(release): ${nextRelease.version}"
      }
    ]
  ]
}
